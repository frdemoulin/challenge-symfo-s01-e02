{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Liste des étudiants</h1>

    <ul>
    {% for student in student_list %}
        <li class="{{ cycle(['white-background','lt-gray-white-background'], loop.index0) }}">
            <a href="{{ path('show_student_info', {'id': loop.index0}) }}" >{{ student.name|e }}</a>
        </li>
    {% endfor %}
    </ul>

    <p>Le dernier étudiant affiché est {{ lastStudent.name }}.</p>

</div>
{% endblock %}
